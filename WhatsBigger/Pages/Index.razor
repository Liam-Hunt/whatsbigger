@page "/"
@inject NavigationManager Navigation

<PageTitle>Whats Bigger?</PageTitle>

<h1>What's Bigger?</h1>

<div>
	<h2>Cities</h2>
	<div class="row">
		<div class="col">
			<button class="btn btn-primary" @onclick="@(e => Navigation.NavigateTo("cities/uk"))">UK</button>
			<p>Top 50 cities from the UK</p>
		</div>
		<div class="col">
			<button class="btn btn-primary" @onclick="@(e => Navigation.NavigateTo("cities/usa"))">USA</button>
			<p>Top 50 cities from the USA</p>
		</div>
		<div class="col">
			<button class="btn btn-primary" @onclick="@(e => Navigation.NavigateTo("cities/global"))">Global</button>
			<p>Top 2 cities from every country in the world</p>
		</div>
	</div>
</div>The home 